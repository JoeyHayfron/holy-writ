<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    app:cardCornerRadius="8dp"
    android:padding="5dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="?attr/cardBg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/bookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/roboto"
        android:text="Gen 1:1"
        android:textColor="?attr/colorText"
        android:textSize="?attr/fontHeading"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/bookShort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/roboto"
        android:text="Gen 1:1"
        android:textColor="?attr/colorText"
        android:textSize="?attr/fontNormal"
        />
    <TextView
        android:id="@+id/bookTestament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/roboto"
        android:text="Gen 1:1"
        android:textColor="?attr/colorText"
        android:textSize="?attr/fontNormal"
        />
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bookGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/roboto"
                android:text="Gen 1:1"
                android:textColor="?attr/colorText"
                android:textSize="?attr/fontNormal"
                />

            <TextView
                android:id="@+id/bookNoOfChapters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/roboto"
                android:text="Gen 1:1"
                android:textColor="?attr/colorText"
                android:textSize="?attr/fontNormal"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/roboto"
            android:text="Gen 1:1"
            android:textColor="?attr/colorText"
            android:textSize="?attr/fontNormal"
            />

        <TextView
            android:id="@+id/bookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/roboto"
            android:textSize="?attr/fontNormal"
            android:text="20/09/2020 09:20:30"
            android:textColor="?attr/colorText" />
    </LinearLayout>

</androidx.cardview.widget.CardView>